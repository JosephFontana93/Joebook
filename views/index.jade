extends layout

block content
  h1= "Welcome to Joebook"
  h2="If you are a new user please sign up."
  div
   form(action='/signup',method='post')
     div(data-role='fieldcontain')
       fieldset(data-role='controlgroup')
         label(for='username')
            input(id='username',type='text',value='',placeholder='Username',name='username')
     div#passworddiv(data-role='fieldcontain')
       fieldset(data-role='controlgroup')
         label(for='password')
            input(id='password',type='password',value='',placeholder='Password',name='password')
     div(data-role='fieldcontain')   
       input(type='submit',value='Sign Up',data-transition='fade', data-theme='c') 
  div 
    h2="If you are a returning user please login."
    div
      form(action='/signin',method='post')
        div(data-role='fieldcontain')
          fieldset(data-role='controlgroup')
            label(for='username')
               input(id='username',type='text',value='',placeholder='Username',name='username')
        div#passworddiv(data-role='fieldcontain')
          fieldset(data-role='controlgroup')
            label(for='password')
               input(id='password',type='password',value='',placeholder='Password',name='password')
        div(data-role='fieldcontain')   
          input(type='submit',value='Sign In',data-transition='fade', data-theme='c')  
    
